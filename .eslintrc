{
	"env": {
        "browser": true,
        "node": true,
		"es6": true,
		"commonjs": true
	},
	"extends": [
		"airbnb/base",
		"plugin:react/recommended"
	],
	"parserOptions": {
		"ecmaVersion": 9,
		"ecmaFeatures": {
		"jsx": true
		},
		"sourceType": "module"
	},
	"settings": {
		"import/resolver": {
			"alias": {
				"map": [
					["components", "./web/components"],
					["web", "./web"],
					["store", "./store"]
				]
			}
		}
	},
	"plugins": ["react"],
	"rules": {
		"linebreak-style": 0,
		"indent": ["error", "tab"],
		"no-tabs": 0
	}
}
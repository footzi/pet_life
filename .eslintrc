{
	"env": {
		"browser": true,
		"es6": true,
		"commonjs": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended"
	],
	"parserOptions": {
		"ecmaVersion": 9,
		"ecmaFeatures": {
		"jsx": true
		},
		"sourceType": "module"
	},
	"plugins": ["react"],
	"rules": {
		"react/jsx-uses-react": 2,
		"quotes": ["error", "single", { "allowTemplateLiterals": true }],
		"sort-imports" : ["error", { "ignoreCase": true }]
	}
}